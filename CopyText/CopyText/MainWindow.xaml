<Window x:Class="CopyText.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopyText"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="0"/>
                <GradientStop Color="#FF53EA6F" Offset="1"/>
                <GradientStop Color="#FF1A4B23"/>
                <GradientStop Color="#FF297637" Offset="0.007"/>
            </LinearGradientBrush>
        </Grid.Background>

        <TextBox x:Name="txt1" HorizontalAlignment="Left" Height="157" Margin="136,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="191" Text="{Binding Path=Text,ElementName=txt2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <TextBox x:Name="txt2" Height="157" Margin="545,111,59,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="188"  />
        
    </Grid>
</Window>
